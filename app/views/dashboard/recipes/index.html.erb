<% if current_user.recipes.any? %>
  <h1 class="text-stone-600 mb-8"><%= t("dashboard.recipes.views.index.title") %></h1>
  <% @recipes.each do |recipe| %>
    <%= recipe.name %>
  <% end %>
<% else %>
  <div class="max-w-full bg-stone-100 rounded-md px-4 py-2">
    <%= turbo_frame_tag "new-recipe" do %>
      <div class="px-4 py-2 grid grid-cols-3 gap-8">
        <figure class="col-span-1">
          <%= image_tag "bread-bakers.svg", class: "w-full" %>
        </figure>
        <div class="col-span-2">
          <h2 class="mb-8"><%= t("dashboard.recipes.messages.no_recipes") %></h2>

          <%= link_to new_dashboard_recipe_path, id: "new-recipe-link", class: "flex w-max bg-rose-500 px-4 py-2 rounded-md hover:bg-rose-700 space-x-2" do %>
            <svg class="fill-rose-50 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512"><!--! Font Awesome Pro 6.2.0 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2022 Fonticons, Inc. --><path d="M352 384H64L5.4 178.9C1.8 166.4 0 153.4 0 140.3C0 62.8 62.8 0 140.3 0h3.4c66 0 123.5 44.9 139.5 108.9l31.4 125.8 17.6-20.1C344.8 200.2 362.9 192 382 192h2.8c34.9 0 63.3 28.3 63.3 63.3c0 15.9-6 31.2-16.8 42.9L352 384zM32 448c0-17.7 14.3-32 32-32H352c17.7 0 32 14.3 32 32v32c0 17.7-14.3 32-32 32H64c-17.7 0-32-14.3-32-32V448z"/></svg>
            <span class="text-rose-50">Let's get started</span>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
